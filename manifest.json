{
	"name"                   : "Chrome Extension Playground", 
	"version"                : "0.0.0.1", 
	"manifest_version"       : 2, //Will this field break existing extensions??
	//"content_security_policy": "", 
	"description"            : "An UNOFFICIAL extension designed for Chrome Extension Developers to learn and test Chrome Extension APIs.", 
	"default_locale"         : "en", 
	"homepage_url"           : "https://code.google.com/p/chrome-extension-playground/", 
	"background_page"        : "bg.html", 
	"offline_enabled"        : true, 
	"options_page"           : "options.html", 
/*
    In order to test all kinds of APIs, all possible permissions must be requested 
	(what would appear when installing this extension?:)
*/
	"permissions" : [
		"background", 
		"bookmarks", 
		"chrome://favicon/", 
		"clipboardRead", 
		"clipboardWrite", 
		"contentSettings", 
		"contextMenus", 
		"cookies", 
		"debugger", 
		"experimental", 
		"fileBrowserHandler", 
		"geolocation", 
		"history", 
		"idle", 
		"management", 
		"notifications", 
		"pageCapture", 
		"proxy", 
		"tabs", 
		"tts", 
		"ttsEngine", 
		"unlimitedStorage", 
		"webNavigation", 
		"webRequest", 
		"webRequestBlocking", 
		"<all_urls>"
		]
